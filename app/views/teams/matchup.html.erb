<h1><%=@team.name%>'s Matchups</h1>
<br>
<table class="table table-hover">
<thead>
<tbody>
  <tr class="table-active">
    <th scope="row">Game</th>
    <td>Home Team</td>
    <td>Visitor Team</td>
    <td>Winner </td>
    <td>Game Week</td>
    </tbody>
  </tr>
  <% @competitions.each_with_index do |competition, index| %>
  <tr>
    <th scope="col"><%= link_to "Matchup #{index+1} ", game_path(competition.game) %></th>
    <th scope="col"><%= competition.home_team.name %></th>
    <th scope="col"><%= competition.visitor_team.name %></th>
    <th scope="col"><%= competition.game.winner_id %></th>
    <th scope="col"><%= competition.game_week %></th>

    <% if @current_user.admin %>
    <th scope="col"><%= link_to "Edit Competition", edit_competition_path(competition) %> </th>
    <% end %>

<% end %>
  </tr>
</thead>
</table> 