<%= form_for @competition do |f|%>
    <div class="form-group">
    <%= f.label "Select a home team:"%>
    <%= f.collection_select :team1_id,  Team.all, :id, :name, :include_blank => true %>
    <%= f.label "Select a visiting team:"%>
    <%= f.collection_select :team2_id,  Team.all, :id, :name, :include_blank => true %>
    </div>
    <%= f.label "Select a week to schedule the matchup:"%>
    <%= f.select :game_week, (0..16) %>

    <%= f.submit%>
<% end %>